#!/usr/bin/env bash

#set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

PATH=$PATH:/var/vcap/packages/cf-cli/bin:/var/vcap/packages/spruce/bin # add `cf` and `spruce` to PATH

<% if_p('cf.skip_ssl_verification') do %>
skip_ssl="--skip-ssl-validation "
<% end %>

<% if_p('cf.sso') do %>
sso="--sso "
<% end %>

cf login \
  -p '<%= p('cf.password') %>' \
  -o '<%= p('cf.org') %>' \
  -s '<%= p('cf.space') %>' \
  ${sso:-''} \
  ${skip_ssl:-''} \
  -a '<%= p('cf.api_endpoint') %>' \
  -u '<%= p('cf.user') %>'

cf create-service-broker p-mongo <%= p("broker.security_user_name") %> <%= p("broker.security_user_password") %> "<%= p("broker.host") %>"
cf enable-service-access p-mongo