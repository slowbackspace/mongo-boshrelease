#!/usr/bin/env bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

PATH=$PATH:/var/vcap/packages/cf-cli/bin # add cf to PATH

<% if_p('cf.skip_ssl_verification') do %>
skip_ssl="--skip-ssl-validation "
<% end %>

<% if_p('cf.sso') do %>
sso="--sso "
<% end %>

cf login \
  -p '<%= p('cf.password') %>' \
  -o '<%= p('cf.org') %>' \
  -s '<%= p('cf.space') %>' \
  ${sso:-''} \
  ${skip_ssl:-''} \
  -a '<%= p('cf.api_endpoint') %>' \
  -u '<%= p('cf.user') %>'

cf disable-service-access p-mongodb
cf delete-service p-mongodb -f
cf delete-service-broker p-mongodb -f
